{{#partial "content"}}
    <h1>Current Ideas</h1>

    <ul>
        {{#each ideas}}
            <li>
                <form action="/ideas/{{slug}}/vote" method="post">
                    <a href="/ideas/{{slug}}/details">{{title}}</a> ({{voteCount}} votes) <button>Vote</button>
                </form>

            </li>
        {{/each}}
    </ul>

    <form action="/ideas" method="post">
        <input type="text" name="title" placeholder="What's your idea?">
        <button>Suggest</button>
    </form>

{{/partial}}

{{#partial "title"}}
    Ideas
{{/partial}}


{{> base.hbs}}